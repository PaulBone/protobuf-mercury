:- module TEST_mreader.

:- interface.

:- import_module io.

:- pred main(io::di, io::uo) is det.

:- implementation.

:- import_module protobuf_runtime.
:- import_module TEST.

:- import_module exception.
:- import_module list.
:- import_module pprint.
:- import_module stream.

main(!IO) :-
    io.command_line_arguments(Args, !IO),
    ( Args = [File] ->
        io.open_binary_input(File, OpenRes, !IO),
        ( OpenRes = ok(Stream) ->
            get(pb_stream(Stream, 100000), GetRes, !IO),
            ( GetRes = ok(pb_message(Message:MESSAGE_TYPE)),
                pprint.write(0, to_doc(Message), !IO)
            ; GetRes = error(_:pb_error(io.error)),
                throw(GetRes)
            ; GetRes = eof,
                throw(GetRes)
            )
        ;
            throw(OpenRes)
        )
    ;
        throw("expecting one arg")
    ),
    io.nl(!IO).
